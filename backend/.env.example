# API Keys
DEEPGRAM_API_KEY=your_deepgram_key_here
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_ORGANIZATION_ID=  # Optional: Your OpenAI org ID for priority access
OPENAI_PROJECT_ID=  # Optional: Your OpenAI project ID
OPENAI_USE_PRIORITY_API=true  # Enable priority API tier for lower latency
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Pinecone (RAG)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=voice-agent-kb
PINECONE_DIMENSION=1536

# RAG Settings
RAG_USE_LOCAL_EMBEDDINGS=true
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3
RAG_MIN_SIMILARITY=0.10
RAG_TIMEOUT_MS=8000

# Voice Agent Settings
MIN_SILENCE_DEBOUNCE_MS=400
MAX_SILENCE_DEBOUNCE_MS=1200
CANCELLATION_RATE_THRESHOLD=0.30

# Deepgram Flux (low-latency English STT)
USE_FLUX=true
FLUX_EAGER_EOT_THRESHOLD=0.5
FLUX_EOT_THRESHOLD=0.7
FLUX_EOT_TIMEOUT_MS=5000

# Server
HOST=0.0.0.0
PORT=8000

# CORS
FRONTEND_URL=http://localhost:5173
